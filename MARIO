#include <cs50.h>
#include <stdio.h>

int main(void)
{

    int n;

    do
    {

        n = get_int("Height: ");

    }
    while (n < 0 || n > 8 || n == 0);
    for (int y = 0; y < n; y++)
    {

        for (int x = 0; x < (n - y - 1); x++)
        {

            printf(" ");

        }

        for (int x = 0; x < (y + 1); x++)
        {

            printf("#");

            printf("\n");

        }
    }

}
